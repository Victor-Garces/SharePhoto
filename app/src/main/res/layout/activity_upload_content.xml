<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/myCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="15dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="15dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/myImageURL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/myImageComment"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="43dp"
                android:contentDescription="@string/imageURL" />

            <TextView
                android:id="@+id/myImageLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/myImageURL"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/myImageURL"
                android:padding="3dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/myImageComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myImageLocation"
                android:padding="3dp"
                android:textSize="20sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
